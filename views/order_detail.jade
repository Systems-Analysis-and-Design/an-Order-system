extends layout
block head-content
  script(src='./../../javascripts/order_detail.js')
block content
  .card
    .card-block
      h4 订单详情
      table.table
        thead
            tr
            th #
            th 名称
            th 价格
            th 总价
        tbody
          each item, i in order
            tr.alert
              th(scope='row') #{i}
              td(name='name')
                span #{item.name}

              td(name='number')
                span #{item.number}  

              td(name='price')
                span #{item.price}
                

                
              

    label
        | 总计:
        span#priceTotal.label.label-pill.label-primary #{totalprice}
    .footer
        button.btn.btn-primary.btn-lg.btn-block(type='button')#post 支付 
