extends layout
  
block content
  .card
    .card-block
      img(src="/images/finish.png").size_finish
      h3 支付完成
      
      h4 请您评价
      form
        fieldset.form-group
          label(for='summary') 订单号
          input#summary.form-control(type='text', placeholder='summary', name='orderNum', disabled)
        fieldset.form-group
          label(for='summary') 总体评价
          input#summary.form-control(type='text', placeholder='summary', name='totalEvaluation')
        fieldset.form-group
          label(for='taste') 口味
          input#taste.form-control(type='text', placeholder='taste', name='taste')
        fieldset.form-group
          label(for='speed') 上餐速度
          input#speed.form-control(type='text', placeholder='speed', name='speedOfProduction')
        fieldset.form-group
          label(for='service') 服务态度
          input#service.form-control(type='text', placeholder='service', name='serviceAttitude')
    .footer
      button.btn.btn-success.btn-lg.btn-block(type='button') 完成
   
